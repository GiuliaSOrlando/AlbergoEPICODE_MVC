@model AlbergoEPICODE_MVC.Models.Dipendente

@{
    ViewBag.Title = "Signup";
}

<div class="p-5 m-5 shadow-lg">
    <div class="row justify-content-center p-5 shadow-lg">
        <div class="col-md-6 bg-dark text-light p-5 shadow-lg d-flex justify-content-center">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <h4 class="fw-light text-center">SIGNUP</h4>
                <div class="form-group">
                    @Html.LabelFor(model => model.Username)
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control bg-dark text-white" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password)
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control bg-dark text-white" })
                </div>

                <button type="submit" class="mt-3 w-100 btn btn-outline-light rounded-0">Registrati</button>
            }
            </div>
        </div>
    </div>

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="text-danger">
                    @ViewData["ErrorMessage"]
                </div>
            }
