                @Html.DropDownListFor(model => model.Descrizione, new SelectList(AlbergoEPICODE_MVC.Models.Servizio.ListaServizi), "  Seleziona tipo servizio  ", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantita, htmlAttributes: new { @class = "control-label col-md-2" })
