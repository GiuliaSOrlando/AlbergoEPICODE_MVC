@model AlbergoEPICODE_MVC.Models.Prenotazione

@{
    ViewBag.Title = "Create";

}


<div class="p-5 m-5 shadow-lg">
    <div class="row justify-content-center p-5 shadow-lg">
        <div class="col-md-6 bg-dark text-light p-5 shadow-lg d-flex justify-content-center">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <h4 class="fw-light text-center">AGGIUNGI PRENOTAZIONE</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdPrenotazione)

                <div class="form-group m-1">
                    @Html.LabelFor(model => model.NumeroCliente, "Cliente", new { @class = "control-label text-white-50" })
                    @Html.DropDownListFor(model => model.NumeroCliente, new SelectList(ViewBag.listaClienti, "Value", "Text"), "  Seleziona un cliente  ", new { @class = "form-control bg-dark text-white-50" })
                    @Html.ValidationMessageFor(model => model.NumeroCliente, "", new { @class = "text-danger" })
                </div>

                @Html.HiddenFor(model => model.NumeroCamera)

                <div class="form-group m-1">
                    @Html.LabelFor(model => model.TipoCamera, "Tipo di camera", new { @class = "control-label text-white-50" })
                    @Html.DropDownListFor(model => model.TipoCamera, new SelectList(AlbergoEPICODE_MVC.Models.Camera.ListaTipoCamera), "Seleziona tipo camera", new { @class = "form-control bg-dark text-white-50" })
                    @Html.ValidationMessageFor(model => model.TipoCamera, "", new { @class = "text-danger" })
                </div>

                <div class="form-group m-1">
                    @Html.LabelFor(model => model.IsSingola, "Tipo di camera", new { @class = "control-label text-white-50" })

                    <div>
                        @Html.RadioButtonFor(model => model.IsSingola, true, new { @class = "form-check-input", id = "singolaRadio" })
                        @Html.Label("singolaRadio", "Singola", new { @class = "form-check-label" })

                        @Html.RadioButtonFor(model => model.IsSingola, false, new { @class = "form-check-input", id = "doppiaRadio" })
                        @Html.Label("doppiaRadio", "Doppia", new { @class = "form-check-label" })
                    </div>

                    @Html.ValidationMessageFor(model => model.IsSingola, "", new { @class = "text-danger" })
                </div>


                @Html.HiddenFor(model => model.DataPrenotazione)
                @Html.HiddenFor(model => model.Anno)
                @Html.HiddenFor(model => model.NumeroProgressivo)

                <div class="form-group m-1">
                    @Html.LabelFor(model => model.DataCheckIn, htmlAttributes: new { @class = "control-label text-white-50" })
                    @Html.TextBoxFor(model => model.DataCheckIn, new { type = "date", @class = "form-control bg-dark text-white-50" })
                    @Html.ValidationMessageFor(model => model.DataCheckIn, "", new { @class = "text-danger" })
                </div>

                <div class="form-group m-1">
                    @Html.LabelFor(model => model.DataCheckOut, htmlAttributes: new { @class = "control-label text-white-50" })
                    @Html.TextBoxFor(model => model.DataCheckOut, new { type = "date", @class = "form-control bg-dark text-white-50" })
                    @Html.ValidationMessageFor(model => model.DataCheckOut, "", new { @class = "text-danger" })
                </div>

                @Html.HiddenFor(model => model.Caparra)

                <div class="form-group m-1">
                    @Html.LabelFor(model => model.TipoSoggiorno, htmlAttributes: new { @class = "control-label text-white-50" })
                    @Html.DropDownListFor(model => model.SelTipoSoggiorno, new SelectList(AlbergoEPICODE_MVC.Models.Prenotazione.ListaTipoSoggiorno), "Seleziona tipo soggiorno", new { @class = "form-control bg-dark text-white-50" })
                    @Html.ValidationMessageFor(model => model.TipoSoggiorno, "", new { @class = "text-danger" })
                </div>

                @Html.HiddenFor(model => model.Tariffa)

                <div class="form-group my-3 text-center">
                    <input type="submit" value="Aggiungi" class="w-100 btn btn-outline-light rounded-0" />
                </div>
            }
        </div>
    </div>
</div>
