@model AlbergoEPICODE_MVC.Models.Prenotazione

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Prenotazione</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdPrenotazione)

    <div class="form-group">
        @Html.LabelFor(model => model.NumeroCliente, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NumeroCliente, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NumeroCliente, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.HiddenFor(model => model.NumeroCamera)

    <div class="form-group">
        @Html.LabelFor(model => model.TipoCamera, "Tipo di camera", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.TipoCamera, new SelectList(AlbergoEPICODE_MVC.Models.Camera.ListaTipoCamera), "  Seleziona tipo camera  ", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TipoCamera, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IsSingola, "Camera singola", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.IsSingola)
            @Html.ValidationMessageFor(model => model.IsSingola, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.HiddenFor(model => model.DataPrenotazione)

    @Html.HiddenFor(model => model.Anno)

    @Html.HiddenFor(model => model.NumeroProgressivo)

    <div class="form-group">
        @Html.LabelFor(model => model.DataCheckIn, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.DataCheckIn, new { type = "date", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DataCheckIn, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DataCheckOut, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.DataCheckOut, new { type = "date", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DataCheckOut, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.HiddenFor(model => model.Caparra)

    <div class="form-group">
        @Html.LabelFor(model => model.TipoSoggiorno, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.SelTipoSoggiorno, new SelectList(AlbergoEPICODE_MVC.Models.Prenotazione.ListaTipoSoggiorno), "  Seleziona tipo soggiorno  ", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TipoSoggiorno, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.HiddenFor(model => model.Tariffa)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
