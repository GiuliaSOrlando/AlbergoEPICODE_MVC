@model AlbergoEPICODE_MVC.Models.Camera

@{
    ViewBag.Title = "Edit";
}

<div class="p-5 m-5 shadow-lg">
    <div class="row justify-content-center p-5 shadow-lg">
        <div class="col-md-6 bg-dark text-light p-5 shadow-lg d-flex justify-content-center">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4 class="fw-light text-center">AGGIORNA DETTAGLI CAMERA</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.HiddenFor(model => model.IdCamera)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Descrizione, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Descrizione, new { htmlAttributes = new { @class = "form-control bg-dark text-white-50" } })
                            @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.IsDoppia, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.IsDoppia)
                                @Html.ValidationMessageFor(model => model.IsDoppia, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Aggiorna dettagli" class="w-100 btn btn-outline-light rounded-0" />
                        </div>
                    </div>
                </div>
            }
